@model AccountViewModel

<div class="container">
    <div class="row mt-3 justify-content-center">
        <div class="col-3">
            <ul class="list-group">
                <li class="list-group-item">
                    <form id="logoutForm" asp-controller="Account" asp-action="CreateSong" method="get">
                        <input type="submit" class="ins-input tex-dark" value="Добавить песню">
                    </form>
                </li>
                <li class="list-group-item">
                    <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post">
