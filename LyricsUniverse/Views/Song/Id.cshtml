<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="d-none d-md-block">
                <ul class="list-group">
                    <h5 class="mb-3">Песни от @Model.SelectedSong.Artist.Title</h5>
                    @if (Model.SelectedSong != null)
                    {
                        @foreach (var song in Model.SelectedSong.Artist.Songs)
                        {
                            <li class="list-group-item">
                                <a href="@Url.Action("Id", "Song", new { id = song.SongId })" class="text-dark">@song.Title</a>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item">
                            <p class="text-dark">Список пуст</p>
                        </li>
                    }
                </ul>
            </div>
            <div class="d-md-none">
                <div class="mb-3">
                    <button class="btn btn-secondary btn-block fs-6" type="button" data-bs-toggle="collapse" data-bs-target="#songList" aria-expanded="false" aria-controls="songList" aria-label="Toggle navigation">
                        Песни от @Model.SelectedSong.Artist.Title
                    </button>
                </div>
                <div class="collapse" id="songList">
                    <div class="card card-body">
                        <ul class="list-group">
                            @if (Model.SelectedSong != null)
                            {
                                @foreach (var song in Model.SelectedSong.Artist.Songs)
                                {
                                    <li class="list-group-item">
                                        <a href="@Url.Action("Id", "Song", new { id = song.SongId })" class="text-dark">@song.Title</a>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="list-group-item">
                                    <p class="text-dark">Список пуст</p>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div>
                @if (Model.SelectedSong != null)
                {
                    <div class="row">
                        <div class="col">
                            <h5>@Model.SelectedSong.Title</h5>
                            <h6>@Model.SelectedSong.Artist.Title</h6>
                        </div>
                        <div class="col mt-2">
                            <form asp-controller="Favorites" asp-action="Add" asp-route-songId="@Model.SelectedSong.SongId" method="post">
                                <button type="submit" class="btn btn-primary btn-block fs-6">
                                    Добавить в избранное
                                </button>
                            </form>
                        </div>
                    </div>
                    
                    <div class="text-container lyrics">
                        @Model.SelectedSong.Text
                    </div>
                }
            </div>
        </div>
    </div>
</div>